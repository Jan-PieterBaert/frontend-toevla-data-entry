<div class="au-c-main-container__content" id="content">
  <div class="au-c-body-container">
    <AuToolbar @border="bottom" @skin="tint" @size="medium">
      <AuToolbarGroup>
        <ul class="au-c-list-horizontal">
          <li class="au-c-list-horizontal__item">
            <AuLink @linkRoute="poi.index" @skin="secondary">
              <AuIcon @icon="arrow-left" @alignment="left" />
              Locaties
          </AuLink>
          </li>
          <li class="au-c-list-horizontal__item">
            <LinkTo class="au-c-link au-c-link--secondary au-u-limit-breadcrumb" @route="poi.show.experiences.index" @model={{@model.pointOfInterest.id}}>{{@model.pointOfInterest.label}}</LinkTo>
          </li>
          <li class="au-c-list-horizontal__item">
            <strong class="au-u-limit-breadcrumb">
              {{@model.title}}
            </strong>
          </li>
        </ul>
      </AuToolbarGroup>
    </AuToolbar>
    <AuToolbar @border="bottom" @size="large">
      <AuToolbarGroup>
        <AuHeading @skin="2"><AuPill>Event</AuPill> <span  class="au-u-limit-text">{{@model.title}}</span></AuHeading>
      </AuToolbarGroup>
      <AuToolbarGroup>
        <LinkTo class="au-c-button au-c-button--secondary" @route="experience.edit" @model={{@model}}>
          <AuIcon @icon="pencil" @alignment="left" />
          Aanpassen
        </LinkTo>
      </AuToolbarGroup>
    </AuToolbar>
    {{outlet}}
    {{#async-await @model.pointOfInterest as |poi|}}

    <div class="au-c-upload-box">
      <AuHeading @level="2" @skin="5" class="au-u-margin-bottom-small">Foto's</AuHeading>
      <UploadImage @poi={{poi}}/>
      <ListImages @poi={{poi}} @height={{100}}/>
    </div>

    {{else}}
      <AuLoader />
    {{/async-await}}
  </div>
</div>