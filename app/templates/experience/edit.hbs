<div class="au-c-main-container__content au-c-main-container__content--scroll"  id="content">
  <AuToolbar @border="bottom" @skin="tint" @size="medium">
    <AuToolbarGroup>
      <ul class="au-c-list-horizontal">
        <li class="au-c-list-horizontal__item">
          <AuLink @linkRoute="poi.index" @skin="secondary">
            <AuIcon @icon="arrow-left" @alignment="left" />
            Locaties
         </AuLink>
        </li>
        <li class="au-c-list-horizontal__item">
          <LinkTo class="au-c-link au-c-link--secondary au-u-limit-breadcrumb" @route="poi.show.experiences.index" @model={{@model.pointOfInterest.id}}>{{@model.pointOfInterest.label}}</LinkTo>
        </li>
        <li class="au-c-list-horizontal__item">
          <strong>
            {{@model.title}} aanpassen
          </strong>
        </li>
      </ul>
    </AuToolbarGroup>
  </AuToolbar>
  <div class="au-o-layout">
    <div class="au-o-region-large">
      <AuHeading @skin="2" class="au-u-margin-bottom">Event aanpassen: <span  class="au-u-limit-text">{{@model.title}}</span></AuHeading>
      {{outlet}}
    </div>
  </div>
</div>