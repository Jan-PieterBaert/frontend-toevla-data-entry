<AuToolbar class="au-u-margin-bottom">
  <AuToolbarGroup>
    <AuHeading @level="2" @skin="3">
      Events
    </AuHeading>
  </AuToolbarGroup>
  <AuToolbarGroup>
    <LinkTo @route="poi.show.experiences.new" @model={{this.poi}} class="au-c-button">
      <AuIcon @icon="add" @alignment="left" />
      Event toevoegen
    </LinkTo>
  </AuToolbarGroup>
</AuToolbar>

<ul class="au-o-grid au-o-grid--tiny">
  {{#each @model as |experience|}}
    <li class="au-o-grid__item">
      <article class="au-o-box au-o-box--small au-c-card au-c-card--link">
        <LinkTo class="au-c-link au-c-link--secondary au-c-card__link" @route="experience.show.tree" @model={{experience}}>{{experience.title}}</LinkTo>
      </article>
    </li>
  {{/each}}
</ul>