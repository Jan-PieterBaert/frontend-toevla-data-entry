<div id="ember-appuniversum-wormhole"></div>

<AuMainHeader @homeRoute="index" @appTitle="Toegankelijk Vlaanderen" @contactRoute="contact">
  {{#if this.session.isAuthenticated}}
  {{!-- @TODO: Add username variable --}}
  <AuDropdown @dropdownTitle="Username" @dropdownButtonLabel="Account settings" @alignment="right">
    <AuButton @skin="tertiary" role="menuitem" {{on "click" (fn this.logout)}}>
      <AuIcon @icon="logout" @alignment="left" />Afmelden
    </AuButton>
  </AuDropdown>
  {{else}}
  <LinkTo @route="login" class="au-c-button au-c-button--tertiary">
    <AuIcon @icon="login" @alignment="left" />Aanmelden
  </LinkTo>
  {{/if}}
</AuMainHeader>

<main class="au-c-main-container" id="main">
  {{outlet}}
</main>