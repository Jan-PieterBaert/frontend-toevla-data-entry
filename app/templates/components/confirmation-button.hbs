{{#if (eq this.state "init")}}
  <button {{on "click" this.click}} type="button">{{yield}}</button>
{{/if}}

{{#if (eq this.state "unconfirmed")}}
  Are you sure?
  <button {{on "click" this.cancelClick}} type="button">No</button>
  <button {{on "click" this.click}} type="button">Yes</button>
{{/if}}

{{#if (eq this.state "confirmed")}}
  Action executed!
{{/if}}
